<div class="mt-4 p-5 bg-secondary text-white rounded">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
  <p class="lead">
    <%= @friend.email %>  | 
    <%= @friend.phone %>  |  
    <%= @friend.twitter %>
  </p>
  <br/>

  <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-success mb-4" %>
  <%= link_to "Back", friends_path, class:"btn btn-dark mb-4" %>

  <%= button_to "Delete from friends list", @friend, method: :delete, class: "btn btn-danger" %>
</div>
